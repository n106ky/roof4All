<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>rent4all</title>
  </head>
  <body>
    <!-- Navbar -->
    <header><%- include('partials/navbar', {page: '/mylistings'}) %></header>
    <main>
      <!-- Dashboard Panel -->
      <%- include('partials/dashboardPanel', {page: '/dashboard'}) %> <%
      if(prop) { %>
      <div>
        <h2>My listings</h2>
        <div>
          <span>Change View / Sort by / Most recent</span>
          <a href="/postProperty"><button>List space for free</button></a>
        </div>
      </div>
      <% prop.forEach((p)=> { %>
      <div class="black-frame">
        <a href="/mylistings/<%= p._id %>">
          <img src="<%= p.img_url %>" alt="property-img" />
          <p><%= p.propertyName %> $<%= p.listing_price.price_space %></p>
          <p><%= p.address.addressline1 %>, <%= p.address.addressline2 %>, <%= p.address.city %></p>
          <p>Space for <%= p.listing_price.no_of_rooms %>, Bath: <%= p.amenities.no_bathrooms %>, Parking: <%= p.amenities.no_parking %></p>
        </a>
        <hr />
        <p>
          Price indicated are for one person, not the whole apartment. Open the
          property page to read more details.
        </p>
      </div>
      <% }) %>
    </main>
    <% } else { %>
    <main>
      <div>
        <h2>My listings</h2>
      </div>
      <div>
        <p>Property activities and summary will show up here</p>
        <a href="/postProperty"><button>List space for free</button></a>
      </div>
    </main>
    <% } %>
    <%- include('partials/footer', {page: '/mylistings'}) %>
  </body>
</html>
